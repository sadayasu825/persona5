<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800">ペルソナ詳細画面</h1>
</div>
<div class="col-xl-12 col-lg-7">
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h4 class="m-0 font-weight-bold text-primary">
        (<%= @persona.arcana.name %>)
        <%= @persona.name %>
      </h4>
    </div>
    <div class="card-body"> 
      <%= image_tag "#{@persona.img_path}" %>
    </div>
  </div>
</div>
<div class="col-xl-12 col-lg-7">
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h5 class="m-0 font-weight-bold text-primary">習得スキル</h5>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>スキル</th>
              <th>習得レベル</th>
            </tr>
          </thead>
          <tbody>
            <% @skills.each_with_index do |skill, index| %>
              <tr>
                <td><span class="skill-name" id="skill_<%= index %>"><%= skill[:name] %></span></td>
                <td class="skill-level"><%= skill[:level].zero? ? '初期' : skill[:level] %></td>
              </tr>
              <div>
                <p id="skill_<%= index %>_desc" class="skill-description"><%= skill[:description] %></p>
              </div>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script>
  $('.skill-name').hover(
    function(e){
      let mouse_x = e.clientX;
      let mouse_y = e.clientY;
      const desc_tag = $(`#${$(this).attr('id')}_desc`);
      desc_tag.css({
        'left': mouse_x - 300,
        'top': mouse_y - 500
      })
      $(this).css({
        'text-decoration': 'underline'
      })
      desc_tag.show();
    },
    function(){
      $(`#${$(this).attr('id')}_desc`).hide();
      $(this).css({
        'text-decoration': 'none'
      })
    }
  );
</script>

<style>
  .skill-description {
    display: none;
    position: absolute;
    padding: 16px;
    -webkit-border-radius: 8px;
    -moz-border-radius: 8px;  
    border-radius: 8px;
    background: #333;
    color: #fff;
  }
</style>
